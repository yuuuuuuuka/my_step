<div class="first-view">
    <div class="menu-content">
      <h2 class="heading-name">Let' start!</h2>

      <%= link_to "運動する", new_log_path, class: "post" %>

       <%= link_to "記録する", new_weight_path(current_user), class: "post" %>
       <%= link_to "記録を見る",weights_path(current_user), class: "post" %>
      <%= link_to "BMI計算", new_user_profile_path(current_user), class: "post"if current_user.present?  %>

      <%#>= render partial: 'simple_calendar/month_calendar', locals: { month: @month, year: @year, start_date: @start_date } %>
 <%= month_calendar(class: "custom-calendar") do |date| %>
       <div class="date">
        <%= date.day %>
         <% @logs&.each do |log| %>
           <% if log.date == date %>
            <div class="log-entry">
             <%= link_to log.name, log_path(log), class: "post" %>
           </div>
          <% end %>
         <% end %>
        </div>
      <% end %>
    </div>
    </div>
</div>
