<div class="chat-main">
  <div class="container">
    <h1>運動記録投稿</h1>
  </div>

  <%= form_with(model: @log, local: true) do |form| %>
  <div class ="form-box">
    <div class="form-group">
      <%= form.label :date, "日付" %>
      <%= form.date_field :date %>
    </div>
    <div class="form-group">
      <%= form.label :name, "運動名" %>
      <%= form.text_field :name, placeholder: "例：ランニング、筋トレ" %>
    </div>
    <div class="form-group">
      <%= form.label :duration, "運動時間（分）" %>
      <%= form.number_field :duration, min: 0, placeholder: "例：30" %>
    </div>
    <div class="form-group">
      <%= form.label :reps, "回数" %>
      <%= form.number_field :reps, min: 0, placeholder: "例：10" %>
    </div>
    <div class="form-group">
      <%= form.label :memo, "メモ" %>
      <%= form.text_area :memo, rows: 3, placeholder: "記録したいこと" %>
    </div>

    <%= form.submit "記録する" %>
  <% end %>
  
</div>
