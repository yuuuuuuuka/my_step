
<div class = "weight-chat-main">
<h1 class="form-title">体重を記録する</h1>

<%= form_with model: @weight, local: true, class: "weight-form" do |form| %>
  <div class="form-group">
    <%= form.label :date, "日付", class: "form-label" %>
    <%= form.date_field :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :weight, "体重 (kg)", class: "form-label" %>
    <%= form.number_field :weight, step: 0.1, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit "記録する", class: "btn btn-primary" %>
  </div>
<% end %>
</div>
