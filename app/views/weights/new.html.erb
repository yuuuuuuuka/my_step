
<div class = weit_warppoer>
  <div class = "chat-main">
   <%= form_with model: @weight, local: true, data: { turbo: true }, class: "weight-form" do |form| %>
      <h1 class="form-title">体重を記録する</h1>
        <div class="form-group">
          <%= form.label :date, "日付", class: "weight-form-label" %>
          <%= form.date_field :date, class: "weight-form-control" %>
       </div>
        <div class="form-group">
          <%= form.label :weight, "体重 (kg)", class: "weight-form-label" %>
          <%= form.number_field :weight, step: 0.1, class: "weight-form-control" %>
         </div>
        <div class="form-group">
        <%= form.submit "記録する", class: "btn btn-primary" %>
          </div>
         <table class="weight-table">
    <thead>
      <tr>
        <th>日付</th>
        <th>体重 (kg)</th>
      </tr>
    </thead>
    <tbody>
       <h1 class="form-title">今までのデータ</h1>
      <% @user_weights.each do |weight| %>
        <tr>
          <td class="editable" data-type="date" data-id="<%= weight.id %>"><%= weight.date.strftime("%m/%d") %></td>
    <td class="editable" data-type="weight" data-id="<%= weight.id %>"><%= weight.weight %></td>
    <td>
      <button class="weights_delete-btn" data-id="<%= weight.id %>">削除</button>
    </td>
        </tr>
      <% end %>
    </tbody>
  </table>
    <% end %>
  </div>
</div>
